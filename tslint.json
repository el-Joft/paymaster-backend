{
  "defaultSeverity": "error",
  "extends": "tslint-config-airbnb",
  "rules": {
    "max-line-length": [true, 80],
    "interface-name": [true, "always-prefix"],
    "member-access": [true, "check-constructor", "check-accessor", "check-parameter-property"],
    "member-ordering": [true, { "order": "instance-sandwich", "alphabetize": true }],
    "object-literal-sort-keys": [true, "shorthand-first", "ignore-case"],
    "ordered-imports": [true, { "grouped-imports": true }],
    "space-before-function-paren": [
      true,
      {
        "named": "never",
        "method": "never",
        "constructor": "never",
        "anonymous": "always",
        "asyncArrow": "always"
      }
    ],
    "whitespace": [
      true,
      "check-rest-spread",
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-preblock",
      "check-type-operator"
    ],
    "newline-before-return": true,
    "prefer-switch": [true],
    "arrow-return-shorthand": [true],
    "no-default-export": true,
    "prefer-conditional-expression": [true, "check-else-if"],
    "no-unused-expression": [true, "allow-fast-null-checks", "allow-new"],
    "no-unnecessary-class": [true, "allow-empty-class", "allow-static-only", "allow-constructor-only"],
    "no-this-assignment": [true, { "allow-destructuring": true }],
    "no-return-await": true,
    "no-debugger": true,
    "no-console": true,
    "no-conditional-assignment": true,
    "forin": true,
    "await-promise": [true, "Thenable"],
    "prefer-for-of": true,
    "only-arrow-functions": [true, "allow-declarations", "allow-named-functions"],
    "no-inferrable-types": true,
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "member-variable-declaration",
      "arrow-call-signature",
      "arrow-parameter",
      "property-declaration",
      "object-destructuring",
      "array-destructuring"
    ]
  }
}
